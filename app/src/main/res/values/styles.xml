<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/titleText</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/text</item>
        <item name="titleTextColor">@color/titleText</item>

        <item name="actionModeBackground">@color/primaryDark</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear_24dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <style name="AppTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/AppTheme.ActionMode.TextStyle</item>
    </style>

    <style name="AppTheme.ActionMode.TextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/titleText</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorControlNormal">@color/titleText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.OverFlow">
        <item name="android:src">@drawable/ic_more_vert_24dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/fabText</item>
    </style>

    <style name="recycler_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/thumb_drawable</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/line_drawable</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/thumb_drawable</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/line_drawable</item>
    </style>

    <style name="notice_no_data">
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="fade_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.5</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layerType">hardware</item>
    </style>

    <style name="tracker_over_layout">
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
