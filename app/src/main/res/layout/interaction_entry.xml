<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardMaxElevation="5dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp"
    style="@style/card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/log_entry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        >

        <TextView
            android:id="@+id/log_entry_names"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Jack, John" />

        <LinearLayout
            android:id="@+id/log_entry_type_and_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/log_entry_names"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            >

            <TextView
                android:id="@+id/log_entry_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toBottomOf="@id/log_entry_names"
                tools:text="Meeting"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horizontal_divider_dot"
                />

            <TextView
                android:id="@+id/log_entry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12 May 2019"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/log_entry_comment"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            tools:text="There will be a long comment, describing this interaction. Or not."
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/log_entry_type_and_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
