<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardMaxElevation="5dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        style="@style/card"
        >

    <RelativeLayout
        android:id="@+id/last_interaction_entry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/last_interaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/friend_name"
            />

        <TextView
            android:id="@+id/last_interaction_time"
            android:layout_below="@id/last_interaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/friend_reminder_date_stub"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>