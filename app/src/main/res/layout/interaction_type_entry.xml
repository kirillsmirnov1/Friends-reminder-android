<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardMaxElevation="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    style="@style/card"
    >

    <RelativeLayout
        android:id="@+id/interaction_type_entry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        android:clickable="true"
        android:focusable="true"
        >

        <TextView
            android:id="@+id/interaction_type_entry_name"
            android:text="Interaction type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            />

        <TextView
            android:id="@+id/interaction_type_entry_frequency"
            android:layout_below="@id/interaction_type_entry_name"
            android:text="per 100 days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>